<?xml version="1.0" encoding="UTF-8"?>
<taskDefinition id="utility_json_to_csv" name="Utility JSON To CSV" schema_version="1.0" version="1">
    <author>support@kineticdata.com</author>
    <description>This handler converts a JSON string into a CSV string.</description>
    <helpurl>http://ktc.kineticdata.com/handler/utility_json_to_csv/1</helpurl>
    <visible>true</visible>
    <deferrable>false</deferrable>
    <parameters>
        <parameter id="json" label="JSON" required="true"
          tooltip="The JSON String to be converted to CSV"/>
    </parameters>
    <handler name="utility_json_to_csv" version="1">
        <parameters>
            <parameter name="json">&lt;%= @parameters['json'] %&gt;</parameter>
        </parameters>
    </handler>
    <results format="xml">
        <result name="CSV"/>
    </results>
</taskDefinition>